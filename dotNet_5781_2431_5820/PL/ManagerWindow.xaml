<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.ManagerWindow"
        mc:Ignorable="d"
        Title="Manager" Height="488.489" Width="1287.15" WindowStartupLocation="CenterScreen" >

    <Grid Margin="0,0,0.2,-0.8" >
        <Grid.RowDefinitions>
            <RowDefinition Height="208*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="293*"/>
            <ColumnDefinition Width="463*"/>
            <ColumnDefinition Width="523*"/>
        </Grid.ColumnDefinitions>
        <Label Content="בחר אוטובוס:" Grid.Row="0" HorizontalAlignment="Left" Margin="382.2,31,0,0" VerticalAlignment="Top" Height="25" Width="79" Grid.Column="2"/>
        <ComboBox x:Name="cbStudentID" HorizontalAlignment="Left" Text="" VerticalAlignment="Top"
                  Grid.Row="0" Height="25" Margin="224.2,31,0,0" Width="123"
                  ItemsSource="{Binding}" 
                  HorizontalContentAlignment="Left" VerticalContentAlignment="Top" SelectionChanged="cbStudentID_SelectionChanged" Grid.Column="2"/>
        <Grid x:Name="gridOneStudent"  HorizontalAlignment="Left" Margin="255.2,80,-42.2,0" VerticalAlignment="Top" Height="320" Width="311" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="116"/>
                <ColumnDefinition Width="130.4"/>
                <ColumnDefinition Width="37.6"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="35.2"/>
                <RowDefinition Height="Auto" MinHeight="32.8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="תאריך קבלת הרישיון:" Grid.Column="0" HorizontalAlignment="Left" Margin="-25,4,0,5.2" Grid.Row="0" VerticalAlignment="Center" Width="146" Grid.ColumnSpan="2" Height="26"/>
            <DatePicker x:Name="birthDateDatePicker" Grid.Column="1" HorizontalAlignment="Left" Margin="4.2,5,0,5.2" Grid.Row="0" SelectedDate="{Binding BirthDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Height="25" Width="120"/>
            <Label Content="LicenseNum:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3.8,0,3" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="77"/>
            <TextBox x:Name="cityTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="4.2,4.8,0,5" Grid.Row="1" Text="{Binding City, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="LicenseDate:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,4,0,3.8" Grid.Row="2" VerticalAlignment="Center" Height="25" Width="75"/>
            <ComboBox x:Name="graduationComboBox" Grid.Column="1" SelectedItem="{Binding Graduation}" HorizontalAlignment="Left" Height="23"  Margin="4.2,5,0,4.8" Grid.Row="2" VerticalAlignment="Center" Width="120" SelectionChanged="graduationComboBox_SelectionChanged"/>

            <Label Content="KM:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,4.2,0,3.6" Grid.Row="3" VerticalAlignment="Center" Height="25" Width="30"/>
            <TextBox x:Name="houseNumberTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="4.2,5.2,0,4.6" Grid.Row="3" Text="{Binding HouseNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="foul:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3.4,0,3.4" Grid.Row="4" VerticalAlignment="Center" Height="26" Width="34"/>
            <TextBox x:Name="iDTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="4.2,5.4,0,4.4" Grid.Row="4" Text="{Binding ID, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120" IsEnabled="False"/>
            <Label Content="Accident Duco:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,0,0,1" Grid.Row="5" VerticalAlignment="Bottom" Height="25" Width="90"/>
            <TextBox x:Name="nameTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="4.2,3.6,0,3" Grid.Row="5" Text="{Binding Name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="Treatment Duco:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="6" VerticalAlignment="Center" Height="26" Width="98"/>
            <ComboBox x:Name="personalStatusComboBox" Grid.Column="1"  SelectedItem="{Binding PersonalStatus}" HorizontalAlignment="Left" Height="22"  Margin="4.2,5,0,5" Grid.Row="6" VerticalAlignment="Center" Width="120"/>

            <Label Content="Dricing Duco:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="7" VerticalAlignment="Center" Height="26" Width="82"/>
            <TextBox x:Name="startYearTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="4.2,4,0,4" Grid.Row="7" Text="{Binding StartYear, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="Status:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="8" VerticalAlignment="Center" Height="26" Width="45"/>
            <ComboBox x:Name="statusComboBox" Grid.Column="1" SelectedItem="{Binding Status}" HorizontalAlignment="Left" Height="22"  Margin="4.2,5,0,5" Grid.Row="8" VerticalAlignment="Center" Width="120"/>

            <Label Content="Firm:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,3,0,3" Grid.Row="9" VerticalAlignment="Center" Height="26" Width="35"/>
            <TextBox x:Name="streetTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="4.2,4,0,4" Grid.Row="9" Text="{Binding Street, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        </Grid>
        <DataGrid x:Name="studentCourseDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="21,80,30,17" RowDetailsVisibilityMode="VisibleWhenSelected" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.691"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.424"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="gradeColumn" Binding="{Binding Grade}" Header="Grade" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="iDColumn" Binding="{Binding ID}" Header="ID" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="nameColumn" Binding="{Binding Name}" Header="Name" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="numberColumn" Binding="{Binding Number}" Header="Number" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="semesterColumn" Binding="{Binding Semester}" Header="Semester" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="yearColumn" Binding="{Binding Year}" Header="Year" Width="SizeToHeader"/>


                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btUpdateGradeInCourse" Content="Update Garde" Click="btUpdateGradeInCourse_Click" ToolTip="Update grade for selected course, for selected student"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btUnRegisterCourse" Content="UnRegister" Click="btUnRegisterCourse_Click" ToolTip="UnRegister selected student from selected course"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="List of Courses for selected Student:" HorizontalAlignment="Left" Margin="21,49,0,0" VerticalAlignment="Top" Height="23" Width="209" Grid.Column="1"/>

        <Button x:Name="btDeleteStudent" Content="Delete Current Student" HorizontalAlignment="Left" Margin="21,19,0,0" VerticalAlignment="Top" Width="219" Height="28" Background="#FFC56853" Grid.Column="1" Click="btDeleteStudent_Click" Grid.Row="1"/>
        <Button x:Name="btAddStudent" Content="Add New Student" HorizontalAlignment="Left" Margin="284.4,19,0,0" VerticalAlignment="Top" Width="141" Height="31" Background="#FF6DB469" Grid.Column="1" Grid.Row="1" Click="btAddStudent_Click"/>

        <Button x:Name="btUpdateStudent" Content="התחלת נסיעה" HorizontalAlignment="Left" Margin="19,19,0,0" VerticalAlignment="Top" Width="234" Height="28" Background="#FFD1DA16" Click="btUpdateStudent_Click" Grid.Row="1"/>
    </Grid>

</Window>
