<Window x:Class="UI.BusLineSchedual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
         xmlns:BO="clr-namespace:BO;assembly=BL"
        mc:Ignorable="d"
        Title="BusLineSchedual" Height="450" Width="600">
    <Window.Resources>
        <CollectionViewSource x:Key="lineTripViewSource" d:DesignSource="{d:DesignInstance {x:Type BO:OutGoingLine}, CreateList=True}"/>
        <CollectionViewSource x:Key="lineViewSource" d:DesignSource="{d:DesignInstance {x:Type BO:BusLine}, CreateList=True}"/>
        </Window.Resources>
        <Window.Background>
        <ImageBrush ImageSource="bgmore.jpg"/>
    </Window.Background>
    <Grid x:Name="MainGrid" DataContext="{StaticResource lineTripViewSource}">
        <ComboBox x:Name="LineList" ItemsSource="{Binding Path=BusNum}" HorizontalAlignment="Left" Margin="118,92,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbLine_SelectionChanged"/>

        <DataGrid x:Name="BusLineSchedual1" AutoGenerateColumns="False" EnableRowVirtualization="True" BorderThickness="1" ItemsSource="{Binding}" Margin="352,92,119.6,142" RowDetailsVisibilityMode="VisibleWhenSelected" BorderBrush="Black" Foreground="Black" FontWeight="bold">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="startAtColumn" Binding="{Binding Startime}" Header="         Start At" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid x:Name="StationDetails" DataContext="{StaticResource lineViewSource}" HorizontalAlignment="Left" Margin="118,136,0,0" VerticalAlignment="Top" Height="122" Width="205">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Area:" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Left" Margin="3" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBlock x:Name="areaLabel" Text="{Binding}" HorizontalAlignment="Left" Margin="25.6,8,-48.2,9.6" Grid.Row="0" VerticalAlignment="Center" Width="89" Grid.Column="1"/>
            <Label Content="First Station:" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Left" Margin="3" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBlock x:Name="firstStationLabel" Text="{Binding FirstStation}" Grid.Column="1" HorizontalAlignment="Left" Margin="25.6,8.8,-45,11.2" Grid.Row="2" VerticalAlignment="Center" Width="89"/>
            <Label Content="Last Station:" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Left" Margin="3" Grid.Row="3" VerticalAlignment="Center"/>
            <TextBlock x:Name="lastStationLabel" Text="{Binding LastStation}" Grid.Column="1" HorizontalAlignment="Left" Margin="25.6,8,-43.4,9.6" Grid.Row="3" VerticalAlignment="Center" Width="89"/>
        </Grid>
        <Label Content="        BusLine Schedual" HorizontalAlignment="Stretch" Margin="20,10,220.6,0" VerticalAlignment="Top" Width="353" FontWeight="Bold" FontSize="30" Foreground="Black"/>
    </Grid>
</Window>
