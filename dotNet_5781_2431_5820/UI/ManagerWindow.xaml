    <Grid x:Name="Main_Window" Margin="0,0,-6.4,-76.6" Background="#FFF7F7F7">

        <Rectangle Fill="Orange" HorizontalAlignment="Left" Height="600" Stroke="Orange" VerticalAlignment="Top" Width="193" Margin="1007,0,0,0"/>
        <StackPanel x:Name="The_items_opening_window" HorizontalAlignment="Left" Height="600" VerticalAlignment="Top" Width="997" Margin="10,-3,0,0" Background="White"  />
        <Button x:Name="busses" Content="Busses" HorizontalAlignment="Left" Margin="1012,247,0,0" VerticalAlignment="Top" Width="188" Height="77" FontWeight="Bold" Click="busses_Click" FontSize="28" Foreground="White" Background="DarkSlateGray">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="DimGray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="Stations"  Content="Stations" HorizontalAlignment="Left" Margin="1012,411,0,0" VerticalAlignment="Top" Width="188" Height="77" Click="Stations_Click" FontSize="28" Foreground="White" Background="DarkSlateGray" FontWeight="Bold"/>
