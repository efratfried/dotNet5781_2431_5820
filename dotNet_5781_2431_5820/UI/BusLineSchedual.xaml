<Window x:Class="UI.BusLineSchedual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
         xmlns:BO="clr-namespace:BO;assembly=BL"
        mc:Ignorable="d"
        Title="BusLineSchedual" Height="450" Width="600">
    <Window.Resources>
        <CollectionViewSource x:Key="lineTripViewSource" d:DesignSource="{d:DesignInstance {x:Type BO:OutGoingLine}, CreateList=True}"/>
        <CollectionViewSource x:Key="lineViewSource" d:DesignSource="{d:DesignInstance {x:Type BO:BusLine}, CreateList=True}"/>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="bgmore.jpg"/>
    </Window.Background>
    <Grid x:Name="MainGrid" DataContext="{StaticResource lineTripViewSource}" Margin="0,0,-0.4,-3">
        <ComboBox x:Name="BusLineList" FontSize="12" ItemsSource="{Binding}" Margin="157,88,317,308" Width="120" SelectionChanged="BusLineList_SelectionChanged" Height="auto"/>
        <!--<ComboBox x:Name="LineList" ItemsSource="{Binding BusNum}" HorizontalAlignment="Left" Margin="113,92,0,0" VerticalAlignment="Top" Width="115" SelectionChanged="cbLine_SelectionChanged"/>-->
        <Label x:Name="frequency" Content="Choose a frequency:" Margin="4,126,443,252" FontSize="14" FontWeight="Bold"/>
        <ComboBox x:Name="frequencyTime" Margin="157,126,317,268"  Height="auto" ItemsSource="{Binding}" SelectionChanged="frequencyTime_SelectionChanged"/>
        <Label x:Name="choosealine" Content="Choose a line:" FontSize="14" FontWeight="Bold" Margin="4,88,481,297"/>
        <DataGrid x:Name="BusLineSchedual1" AutoGenerateColumns="False" EnableRowVirtualization="True" BorderThickness="1" ItemsSource="{Binding}" Margin="322,86,24,76" RowDetailsVisibilityMode="VisibleWhenSelected" BorderBrush="Black" Foreground="Black" FontWeight="bold" SelectionChanged="BusLineSchedual1_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="startAtColumn" Binding="{Binding LineStartTime}" Header="       Start At" Width="120"/>
                <DataGridTextColumn x:Name="finishAt" Binding="{Binding LineFinishTime}" Header="     Finish at" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid x:Name="StationDetails" DataContext="{StaticResource lineViewSource}" HorizontalAlignment="Left" Margin="20,225,0,0" VerticalAlignment="Top" Height="122" Width="256">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="50.4"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="Area:" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,19,0,24.8" Grid.Row="0" VerticalAlignment="Center" FontSize="14" Height="29" Width="45"/>
            <TextBlock x:Name="areaLabel" Background="White" Text="{Binding Area}" HorizontalAlignment="Left" Margin="0,22,0,34" Grid.Row="0" VerticalAlignment="Center" Width="118" Height="24" Grid.Column="1"/>
            <Label Content="First Station:" Grid.Column="0" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Margin="-2,56,0,36.4" VerticalAlignment="Center" Height="34" Grid.RowSpan="4" Width="93"/>
            <TextBlock x:Name="firstStationLabel" Background="White" Text="{Binding FirstStation}" Grid.Column="1" HorizontalAlignment="Left" Margin="0.8,56,0,0.8" VerticalAlignment="Center" Width="117" Height="24" Grid.RowSpan="2"/>
            <Label Content="Last Station:" Grid.Column="0" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Margin="-2,8.4,0,8.4" Grid.Row="3" VerticalAlignment="Center" Height="28" Width="91"/>
            <TextBlock x:Name="lastStationLabel" Background="White" Text="{Binding LastStation}" HorizontalAlignment="Left" Margin="1,12.8,0,8" Grid.Row="3" VerticalAlignment="Center" Width="118" Height="24" Grid.Column="1"/>
        </Grid>
        <Label Content=" BusLine Schedual" HorizontalAlignment="Stretch" Margin="10,10,318,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="30" Foreground="Black"/>
    </Grid>
</Window>
