<Window x:Class="PL.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:BO="clr-namespace:BO;assembly=BL"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="600" Width="1200">
    <Grid x:Name="Main_Window" Margin="-223,-69,-126,-77" Background="#FFF7F7F7">
        <StackPanel x:Name="The_items_opening_window" HorizontalAlignment="Left" Height="567" VerticalAlignment="Top" Width="1189" Margin="55,72,0,0" Background="White"  />
        <Button x:Name="busses" Content="busses" HorizontalAlignment="Left" Margin="1244,72,0,0" VerticalAlignment="Top" Width="297" Height="77" Click="busses_Click" FontSize="20" Foreground="DarkBlue" BorderBrush="DarkBlue">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="DimGray"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
            <Button x:Name="Stations"  Content="Stations" HorizontalAlignment="Left" Margin="1244,236,0,0" VerticalAlignment="Top" Width="297" Height="77" Click="Stations_Click" FontSize="20" Foreground="DarkBlue" BorderBrush="DarkBlue"/>
        <Button x:Name="buslines"  Content="BusLines" HorizontalAlignment="Left" Margin="1244,154,0,0" VerticalAlignment="Top" Width="297" Height="77" Click="buslines_Click" FontSize="20" Foreground="DarkBlue" BorderBrush="DarkBlue"/>
    </Grid>
</Window>
