        <Image Source="C:/Users/user1/source/repos/efratfried/dotNet5781_2431_5820/dotNet_5781_2431_5820/PL/user_icon2.PNG"  Margin="984,20,-50,0" VerticalAlignment="Top" Height="143"/>
        <Label Content="hello" FontSize="32" Margin="1012,181,97,408" Foreground="Black" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" />
        <TextBox x:Name="username" DataContext="{Binding}"  HorizontalAlignment="Left" Height="44" Margin="1103,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87" IsReadOnly="True" FontSize="32" Foreground="Black" FontWeight="Bold" TextChanged="username_TextChanged" Background="Transparent" BorderBrush="Transparent"/>
        <Button x:Name="log_out" Margin="4,0,1123,583" FontSize="25" Background="Transparent" FontWeight="Bold" Click="log_out_Click" BorderBrush="Transparent"/>
        <Rectangle x:Name="SlidePanel" HorizontalAlignment="Left" Height="67" Margin="0,-3,0,0" VerticalAlignment="Top" Width="77" Fill="White" Visibility="Visible" StrokeLineJoin="Miter"/>
